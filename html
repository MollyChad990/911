<script>
    function sendLoveMessage() {
        const response = prompt("Deborah, how do you feel?");
        if (response) {
            document.getElementById('responseMessage').innerText = You said: "${response}". Thank you for sharing your heart with me, Deborah.;
        } else {
            document.getElementById('responseMessage').innerText = "No response, but I'll wait as long as it takes.";
        }
    }
</script>

